    <DockPanel Background="#FFD4D0C8" Margin="2,5,5,5">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Center" Margin="1,1,1,1">
            <Button HorizontalAlignment="Center" Width="100" Name="buttonGenerateBDT" Margin="5,5,5,5" KeyboardNavigation.TabIndex="9" Height="23" Click="buttonGenerateBDT_Click">_Generate BDT</Button>
            <Button HorizontalAlignment="Center" Width="100" Name="buttonClose" Margin="5,5,5,5" KeyboardNavigation.TabIndex="10" Height="23" Click="buttonClose_Click">_Close</Button>
        </StackPanel>
        <GroupBox Header="Settings">
            <DockPanel>
                <DockPanel DockPanel.Dock="Top" HorizontalAlignment="Stretch" Margin="1,1,1,1">
                    <Label DockPanel.Dock="Left" HorizontalAlignment="Left" Height="23" Width="200">Choose CDT Library containing CDTs:</Label>
                    <ComboBox HorizontalAlignment="Stretch" Height="23" Name="comboCDTLs" KeyboardNavigation.TabIndex="1"></ComboBox>
                </DockPanel>
                <DockPanel DockPanel.Dock="Top" HorizontalAlignment="Stretch" Margin="1,1,1,1">
                    <Label DockPanel.Dock="Left" HorizontalAlignment="Left" Height="23" Width="200">Choose CDT used to generate the BDT:</Label>
                    <ComboBox HorizontalAlignment="Stretch" Height="23" Name="comboCDTs" KeyboardNavigation.TabIndex="2"></ComboBox>
                </DockPanel>
                <DockPanel DockPanel.Dock="Bottom" HorizontalAlignment="Stretch" Margin="1,1,1,1">
                    <Label DockPanel.Dock="Left" HorizontalAlignment="Left" Height="23" Width="200">BDT Library used to store the BDT:</Label>
                    <ComboBox HorizontalAlignment="Stretch" Height="23" Name="comboBDTLs" KeyboardNavigation.TabIndex="8"></ComboBox>
                </DockPanel>
                <DockPanel DockPanel.Dock="Bottom" HorizontalAlignment="Stretch" Margin="1,1,1,1">
                    <Label DockPanel.Dock="Left" HorizontalAlignment="Left" Height="23" Width="200">Name of the generated BDT:</Label>
                    <TextBox Name="textBDTName" HorizontalAlignment="Stretch" Height="23" KeyboardNavigation.TabIndex="7"/>
                </DockPanel>
                <DockPanel DockPanel.Dock="Bottom" HorizontalAlignment="Stretch" Margin="1,1,1,1">
                    <Label DockPanel.Dock="Left" HorizontalAlignment="Left" Height="23" Width="200">Prefix used for the generated BDT:</Label>
                    <TextBox Name="textBDTPrefix" HorizontalAlignment="Stretch" Height="23" KeyboardNavigation.TabIndex="6"/>
                </DockPanel>
                <TabControl TabStripPlacement="Top" Margin="0,3,0,5">
                    <TabItem Header="Attributes">
                        <TabItem.Content>
                            <DockPanel>
                                <GroupBox Header="CON" DockPanel.Dock="Top">
                                    <ListBox Margin="0,2,0,2" Name="checkedlistboxCON" Height="18" KeyboardNavigation.TabIndex="3">
                                        <CheckBox></CheckBox>
                                    </ListBox>
                                </GroupBox>
                                <GroupBox Header="SUPs">
                                    <DockPanel>
                                        <CheckBox Margin="1,2,1,3" DockPanel.Dock="Top" Name="checkboxAttributes" KeyboardNavigation.TabIndex="4">Select all SUPs</CheckBox>
                                        <ListBox Margin="0,2,0,2" Name="checkedlistboxSUPs" KeyboardNavigation.TabIndex="5">
                                            <CheckBox></CheckBox>
                                        </ListBox>
                                    </DockPanel>
                                </GroupBox>
                            </DockPanel>
                        </TabItem.Content>
                    </TabItem>
                </TabControl>
            </DockPanel>
        </GroupBox>
